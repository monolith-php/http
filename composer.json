{
  "name": "monolith/http",
  "description": "HTTP abstractions for the Monolith framework.",
  "keywords": [
    "monolith",
    "http"
  ],
  "require": {
    "php": ">=8",
    "monolith/collections": "^9",
    "monolith/component-bootstrapping": "^8"
  },
  "require-dev": {
    "phpspec/phpspec": "^7"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.humanmusic.eu",
      "canonical": false,
      "only": [
        "monolith/*"
      ]
    }
  ],
  "autoload": {
    "psr-4": {
      "Monolith\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\Http\\": "spec/"
    },
    "files": [
      "src/functions.php",
      "spec/spec-functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
