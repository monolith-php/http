{
  "name": "monolith/http",
  "description": "HTTP abstractions for the Monolith framework.",
  "keywords": [
    "monolith",
    "http"
  ],
  "require": {
    "php": ">=8.1",
    "monolith/collections": "^10",
    "monolith/component-bootstrapping": "^9"
  },
  "require-dev": {
    "phpspec/phpspec": "^7"
  },
  "autoload": {
    "psr-4": {
      "Monolith\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\Http\\": "spec/"
    },
    "files": [
      "src/functions.php",
      "spec/spec-functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
