{
  "name": "monolith/http",
  "description": "HTTP abstractions for the Monolith framework.",
  "keywords": [
    "monolith",
    "http"
  ],
  "authors": [
    {
      "name": "Shawn McCool",
      "email": "shawn@heybigname.com"
    }
  ],
  "require": {
    "php": "^7.4",
    "monolith/collections": "^6",
    "monolith/component-bootstrapping": "^6"
  },
  "require-dev": {
    "phpspec/phpspec": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Monolith\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\Http\\": "spec/"
    },
    "files": [
      "src/functions.php",
      "spec/spec-functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
